{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ESNext",
		"rootDir": "src",
		"outDir": "dist",
		"baseUrl": "src",
		"lib": [ "DOM", "ES2020" ],
		"moduleResolution": "nodenext",
		"declaration": true,
		"alwaysStrict": true,
		"strict": true,

		"plugins": [
			{ "transform": "ts-macros" }
		]
	},
	"include": [ "src/**/*" ]
}